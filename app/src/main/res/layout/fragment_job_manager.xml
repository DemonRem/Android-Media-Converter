<?xml version="1.0" encoding="utf-8"?>
<com.github.khangnt.mcp.view.RecyclerViewGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerViewGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@id/loadingState"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_gravity="center"
        tools:visibility="invisible"/>

    <TextView
        android:id="@id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/margin_huge"
        android:text="@string/job_list_empty_message"
        tools:visibility="invisible"/>

    <LinearLayout
        android:id="@id/errorState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_huge">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_list_load_error_message"/>

        <TextView
            android:id="@id/errorStateReasonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Because bla bla bal bla"/>

        <Button
            android:id="@id/errorStateRetryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/retry"/>
    </LinearLayout>

</com.github.khangnt.mcp.view.RecyclerViewGroup>